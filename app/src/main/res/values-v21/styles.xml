<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BaseActionBarTheme" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:colorControlNormal">@android:color/white</item>
    </style>

    <style name="BaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/primary</item>
        <item name="android:colorAccent">@color/primary</item>
        <item name="android:textColorPrimary">@color/titleColor</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="searchViewStyle">@style/MainSearchViewStyle</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="actionBarTheme">@style/BaseActionBarTheme</item>
        <item name="actionBarWidgetTheme">@style/BaseActionBarTheme</item>
        <item name="actionBarStyle">@style/BaseActionBarStyle</item>
    </style>


